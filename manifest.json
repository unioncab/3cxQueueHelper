{
  "name": "3cxClipChrome",
  "description": "Extension modifies the 3CX web client, hides the send to vmail button and removes user from the queue when a call is decline.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/options/options.html",
    "default_icon": "src/images/clip-line-icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "512": "src/images/clip-line-icon.png"
  }
}
