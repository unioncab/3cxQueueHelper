{
  "name": "3cxQueueHelper",
  "description": "Extension modifies the 3CX web client, hides the send to vmail button and removes user from the queue when a call is decline.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/options/options.html",
    "default_icon": "src/images/clip-icon-512.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"]
    }
  ],
  "permissions": ["storage"],
  "icons": {
    "16": "src/images/clip-icon-16.png",
    "32": "src/images/clip-icon-32.png",
    "64": "src/images/clip-icon-64.png",
    "128": "src/images/clip-icon-128.png",
    "256": "src/images/clip-icon-256.png",
    "512": "src/images/clip-icon-512.png"
  }
}
